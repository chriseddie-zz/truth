.contenthover {
	display: none;
	float: left;
	position: absolute;
	left: 0px;
	top: 0px;
	background-image: url("<%= image_path('hover-bg.png') %>");
	height: 100%;
	width: 100%;
}

.meta-hover:hover .contenthover {
	display: block;
}

.hover-text-container {
	position: relative;
  top: 50%;
  -webkit-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  transform: translateY(-50%);
}

.hover-text-head {
	color: #FFF;
	text-align: center;
	text-transform: uppercase;
	font-size: 14px;
}

.hover-text-sub {
	color: #e8561f;
	text-align: center;
	text-transform: uppercase;
	font-family: Avenir Next;
	font-size: 11px;
	padding: 10px;
}

.hover-text-sub-2 {
	color: #FFF;
	text-align: center;
	font-family: Avenir Next;
	font-size: 11px;
	padding: 10px;
}

.sm-logo {
	width: 109px;
	height: 27px;
	background-image: url("<%= image_path('sm-logo.png') %>");
	background-size: 109px 27px;
	margin-top: 30px;
	margin-bottom: 30px;
	margin-left: auto;
	margin-right: auto;
}

.kit {
	width: 300px;
	position: relative;
	top: 50%;
 	transform: translateY(-50%);
}

.kit-sm {
	width: 225px;
	position: relative;
	top: 50%;
 	transform: translateY(-50%);
}

.shop {
	width: 225px;
	position: relative;
	top: 50%;
 	transform: translateY(-50%);
}

.homepage {
	margin-top: 200px;
}

.carousel-caption {
  position: absolute;
  margin-bottom: 200px;
  z-index: 10;
  color: #ffffff;
  text-align: center;
}

.carousel-title {
	font-family: 'Avenir Next';
	font-size: 30px;
	font-weight: 100;
	letter-spacing: 4px;
	text-align: center;
	color: #FFF;
}

.toggle {
	margin-top: -14px;
}

.dropdown-toggle {
	border: 0px;
	background-color: transparent;
	color: #e8561f;
}

/*FORMS*/

.form-control {
	border: 1px solid #e9e9e9;
	border-radius: 4px;
  height: 46px;
  font-size: 16px;
  box-shadow: inset 0px 0px 0px 0px white;
  -webkit-appearance: none;
}

.form-note {
	color: #999;
	font-size: 12px;
	font-family: 'Avenir Next';
  padding-top: 10px;
  padding-left: 14px;
}

.artist-kit-well {
	padding: 0px;
}

.bcrumb {
	margin-top: 20px;
	margin-bottom: -40px;
}

.breadcrumb {
  background-color: inherit;
  border-radius: 0;
}


/*** MODAL ***/

.modal-head {
  padding-top: 28px;
}

.modal-content {
  background-color: #fff;
  border: 0px;
  border-radius: 0px;
  -webkit-box-shadow: 0 3px 9px rgba(0, 0, 0, 0.5);
  box-shadow: 0 3px 9px rgba(0, 0, 0, 0.5);
  -webkit-background-clip: padding-box;
  background-clip: padding-box;
  outline: 0;
  padding: 0;
}

.show-content {
  background-color: #fff;
  padding: 0;
}

.created-at {
  font-size: 10px;
  font-weight: normal;
  color: #999;
}

.modal {
  display: none;
  overflow: hidden;
  position: fixed;
  top: 10%;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1050;
  -webkit-overflow-scrolling: touch;
  outline: 0;
}

.modal-brand {
  width: 100px;
}

.modal-photo {
  padding: 0;
}

.modal-right {
  padding-left: 20px;
  padding-right: 20px;
}

.modal-details {
  overflow: scroll;
  max-height: 300px;
}

.drumwell {
	background-color: #FFF;
	margin-top: 60px;
	margin-bottom: 30px;
	border: solid 1px;
	border-color: #EEE;
	border-radius: 0px;
	-webkit-box-shadow: none;
	-moz-box-shadow: none;
	box-shadow: none;
}
