/*STYLES*/

* {
    margin: 0;
}

body {
	background-color: #F7F7F7;
	font-family: 'Montserrat', sans-serif;
}

a {
	color: #e8561f;
}

a:active {
	color: #e8561f;
}

a:hover {
	text-decoration: underline;
	color: #e8561f;
}

a:focus {
  outline: 0;
}

ul > li {
  display: inline-block;
}

.p-text {
	font-family: 'Avenir Next';
	font-size: 14px;
	line-height: 24px;
	color: #666;
}

.p-bio {
  font-family: 'Avenir Next';
  font-size: 14px;
  line-height: 24px;
  color: #666;
  white-space: pre-line;
}

.p-label {
	font-family: 'Avenir Next';
	font-size: 14px;
	line-height: 24px;
	color: #666;
}

.inverse {
	font-family: 'Avenir Next';
	font-size: 14px;
	line-height: 24px;
	color: #FFF;
	text-align: left;
}

.truth-nav {
  text-transform: uppercase;
  font-size: 13px;
  letter-spacing: 1px;
  margin-bottom: 0;
  padding-left: 0;
  list-style: none;
}

.truth-nav > li {
  padding-right: 77px;
}

.truth-nav > :last-child {
  padding-right: 0 !important;
}

.truth-nav > li > a {
  color: #fff;
}

.truth-nav > li > a:hover {
  color: #e8561f;
  text-decoration: none;
}

.brand {
	width: 160px;
	margin-top: 42px;
	margin-bottom: 42px;
}

.admin-brand {
	width: 160px;
	margin-top: 42px;
	margin-bottom: 10px;
}

.drum-photo {
  width: 100%;
}

.well {
	background-color: #FFF;
	margin-top: 30px;
	margin-bottom: 30px;
	border: solid 1px;
	border-color: #EEE;
	border-radius: 0px;
	-webkit-box-shadow: none;
	-moz-box-shadow: none;
	box-shadow: none;
}

p {
	font-weight: 400;
	color: #322f33;
}

h2 {
	font-weight: 800;
	font-size: 14px;
	color: #322f33;
	margin-top: 10px;
	text-transform: uppercase;
}

hr {
	border-width: 1px;
	border-color: #E9e9e9;
}

.btn {
	padding-left: 50px;
	padding-right: 50px;
  	border: 2px solid;
  	border-color: #FFF;
  	border-radius: 40px;
  	background-color: transparent;
	font-size: 14px;
  	text-transform: uppercase;
  	font-family: 'Montserrat';
}

.btn:hover {
	background-color: #FFF;
	color: #322f33;
	border-color: #FFF;
}

.btn-inverse {
	padding-left: 50px;
	padding-right: 50px;
  	border: 2px solid;
  	border-color: #322f33;
  	color: #322f33;
  	border-radius: 40px;
  	background-color: transparent;
	font-size: 10px;
  	text-transform: uppercase;
  	font-family: 'Montserrat';
}

.btn-inverse:hover {
	background-color: #322f33;
	color: #fff;
	border-color: #322f33;
	text-decoration: none;
}

.jumbo-head {
	font-family: 'Avenir Next';
	font-size: 60px;
	font-weight: 100;
	letter-spacing: 4px;
	color: #FFF;
  margin-top: 130px;
}

.jumbo-head-sub {
	font-family: 'Avenir Next';
	font-size: 18px;
	font-weight: 400;
	letter-spacing: 0px;
	color: #e8561f;
	text-transform: uppercase;
}

.jumbotron-header {
	position: relative;
	background-image: url("<%= image_path('hero-2.jpg') %>");
