}

.hero-callout h1 {
	font-weight: 400;
}

.row-main {
	width: 960px;
}

.section-title {
	font-family: 'Avenir Next';
	font-size: 30px;
	font-weight: 100;
	letter-spacing: 4px;
	text-align: center;
	color: #322f33;
	margin-top: 40px;
}

.section-title hr {
	border-width: 2px;
	border-color: #EEE;
}

.team-photo {
	width: 320px;
	margin: 0px;
	padding: 0px;
	float: left;
}


/*FOOTER*/

.footer {
	height: 165px;
	background-color: #FFF;
	margin-top: 100px;
	text-align: center;
}

.footer-copy {
