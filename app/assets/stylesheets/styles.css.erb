}

.jumbotron-about {
	position: relative;
	background-image: url("<%= image_path('jumbo-test.jpg') %>");
	background-position: center;
	/*background-repeat: no-repeat;*/
	height: 300px;
	text-align: center;
	color: #FFF;
}

.jumbotron-artist {
  position: relative;
	height: 500px;
	text-align: center;
	color: #FFF;
  margin-bottom: 50px;
}

.artist-line {
	height: 1px;
	width: 150px;
	background-color: #666;
	margin-left: auto;
	margin-right: auto;
	margin-top: 8px;
	margin-bottom: 15px;
}

.jumbotron-drums {
	position: relative;
	background-image: url("<%= image_path('jumbo-drums.jpg') %>");
	background-position: center;
