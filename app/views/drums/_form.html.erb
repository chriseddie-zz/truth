<%= form_for(@drum) do |f| %>
  <% if @drum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@drum.errors.count, "error") %> prohibited this drum from being saved:</h2>

      <ul>
      <% @drum.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <h2>Drum Details</h2>
    <hr>

  <div class="field">
    <%= f.text_area :drumDetails, rows: "8", class: "form-control" %>
    <br>
  </div>

  <h2>Drum Photo</h2>
  <hr>
  <div class="field">
    <%= f.file_field :photo %>
    <br>
    <hr>
  </div>

  <div class="actions">
    <%= f.submit class: "btn-inverse btn-primary btn-sm" %>

    <% if !@drum.new_record? %>
    <%= link_to 'Delete', @drum, method: :delete, data: { confirm: 'Are you sure you want to delete this drum?' }, class: "pull-right" %>
    <% end %>

  </div>
<% end %>
