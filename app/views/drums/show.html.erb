<div class="container vertical-center">
  <div class="drumwell row">

    <div class="show-content">

      <div class="col-md-8 modal-photo">
        <img class="drum-photo" src="<%= @drum.photo %>">
      </div>

      <div class="col-md-4 modal-right">
        <div class="modal-head">Details</div>

        <div class="modal-details">
          <p class="p-text"><%= @drum.drumDetails.html_safe %></p>

          <p class="created-at"><%= @drum.created_at.strftime("%b. %d %Y") %></p>

          <hr>

          <div class="share-links">
            <span class='st_facebook'></span>
            <span class='st_twitter'></span>
            <span class='st_pinterest'></span>
          </div>
        </div>
      </div>

    </div>

  </div>
</div>

