      <ul>
      <% @content.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @content.new_record? %>
  <div class="field">
    <%= f.text_field :content_key, class: "form-control", placeholder: "Content Key" %>
