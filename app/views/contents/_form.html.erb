  </div>
  <% end %>

  <div class="field">
    <%= f.text_area :content_text, rows: "8", class: "form-control", placeholder: "Content" %>
    <br>
  </div>


  <div class="actions">
    <%= f.submit class: "btn-inverse btn-primary btn-sm" %>
    <%= link_to 'cancel', contents_path, class: "pull-right" %>
  </div>
<% end %>
