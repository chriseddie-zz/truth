<div class="container">

  <!-- ADMIN MENU -->
  <div class="col-md-4">
    <div class="well">
      <%= render 'layouts/admin_menu' %>
    </div>
  </div>

  <!-- CONTENT -->
  <div class="col-md-8">

    <div class="well">
      <%= link_to 'Add Artist', new_artist_path(@artist) %><span class="glyphicon glyphicon-lock pull-right"></span>
    </div>

    <div class="well">

      <table class="table">
        <thead>
          <tr>
            <th>Artist</th>
            <th>Created</th>
            <th>Edit</th>
          </tr>
        </thead>

        <tbody>

          <% @artists = Artist.order("artist_name ASC") %>
          <% @artists.each do |artist| %>
          <tr>
            <td><%= link_to artist.artist_name, artist_path(artist) %></td>
            <td><%= artist.created_at.strftime("%b. %d %Y") %></td>
            <td><%= link_to 'Edit', edit_artist_path(artist.id) %></td>
          </tr>
          <% end %>

        </tbody>

      </table>

    </div>
  </div>

</div>
